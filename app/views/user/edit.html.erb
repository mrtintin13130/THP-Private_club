<h1><center>You are editing your account</center></h1>
<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col">
      <%= form_for @user do |user| %>
      <div class="form-group">
        <label for="Email">Email address</label>
        <%= user.email_field :email, class: "form-control" %>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="first_name">First Name</label>
        <%= user.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="Last_name">Last Name</label>
        <%= user.text_field :last_name, class: "form-control" %>
      </div>
      <center><%= user.submit "Submit", class: "btn btn-primary" %></center>
      <% end %>
    </div>
    <div class="col">
    </div>
  </div>
</div>
